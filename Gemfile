# Zurb Foundation
gem 'zurb-foundation', '~> 4.1.1'

# Compass
gem 'compass'
gem 'sass'

# Rack for pow
gem 'rack'
gem 'rack-rewrite', :require => 'rack/rewrite'

# Haml
gem 'haml'

# Deployment
gem 'fog'

# Optimization
gem 'uglifier'

# Markdown
gem 'redcarpet'

# Development
gem 'faker'
gem 'rake'
