/[if IE 8] <html class="no-js lt-ie9" lang="en">
<!--[if gt IE 8]><!-->
%html.no-js{lang: 'en'}<>
  <!--<![endif]-->
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'width=device-width', :name => 'viewport'}/
    %title
      = @item[:title]
    %link{:href => '/assets/stylesheets/normalize.css', :rel => 'stylesheet'}/
    %link{:href => '/assets/stylesheets/app.css', :rel => 'stylesheet'}/
    %script{:src => '/assets/javascripts/foundation/vendor-custom-modernizr.js'}
  %body
    = yield
    :javascript
      document.write('<script src=' +
      ('__proto__' in {} ? '/assets/javascripts/foundation/vendor-zepto' : '/assets/javascripts/foundation/vendor-jquery') +
      '.js><\/script>')
    %script{:src => '/assets/javascripts/foundation.js'}
    :javascript
      $(document).foundation();
